\newcommand{\bil}[1]{\mathopen{<} #1\mathclose{>}}
\newcommand{\dgr}[1]{\langle #1 \rangle}
\newcommand{\bra}[1]{\left\langle #1\right |}
\newcommand{\ket}[1]{\left | #1\right\rangle}

\newcommand{\Grad}{\mathop{\rm grad}}
\newcommand{\Div}{\mathop{\rm div}}
\newcommand{\Curl}{\mathop{\rm curl}}
\newcommand{\p}[2]{\dis\frac{\partial #1}{\partial #2}}

\newcommand{\geol}{\mathbin{\tiny\raisebox{-0.7ex}{$\stackrel{\dis\geq}{<}$}}}

\newcommand{\ut}[1]{{\setbox0=\hbox{$#1$}\mathsurround=0pt
       \rlap{\raisebox{-0.8\dp0}{\raisebox{-0.8ex}
       {\kern -0.15ex\hbox{$\tiny\sim$}\kern 0.15ex}}}#1}}
\newcommand{\uti}[1]{{\setbox0=\hbox{$#1$}\mathsurround=0pt
       \rlap{\raisebox{-0.8\dp0}{\raisebox{-0.8ex}
       {\kern -0.3ex\hbox{$\tiny\sim$}\kern 0.3ex}}}#1}}

\newcommand{\ub}[1]{{\rlap{\raisebox{-0.6ex}
      {$ \hskip 0.02em \_ \hskip -0.02em$}}#1}}
\newcommand{\ubi}[1]{{\rlap{\raisebox{-0.8ex}
   {$ \hskip -0.1em \_  \hskip 0.1em $}}#1}}

\newcommand{\dis}{\displaystyle}
\newcommand{\tl}{\textstyle}
\newcommand{\tx}[1]{\quad\hbox{#1}\quad}

\newdimen\arrayruleHwidth                 % thick line
     \setlength{\arrayruleHwidth}{1pt}
     \makeatletter
     \def\Hline{\noalign{\ifnum0=`}\fi\hrule \@height \arrayruleHwidth
         \futurelet \@tempa\@xhline}
     \makeatother

