\xdef#1{\the\secno.\the\meqno} \else\ifnum\appno>0
\eqno({\rm\romappno}.\the\meqno)\xdef#1{{\rm\romappno}.\the\meqno}
\else \eqno(\the\meqno)\xdef#1{\the\meqno} \fi \fi
\global\advance\meqno by1 }

